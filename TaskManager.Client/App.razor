<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <MudCard Class="pa-4">
                        <MudText>You're not authorized to view this page.</MudText>
                        <MudButton Href="/login" Variant="Variant.Text" Color="Color.Primary">Go to Login</MudButton>
                    </MudCard>
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
    </Router>
</CascadingAuthenticationState>